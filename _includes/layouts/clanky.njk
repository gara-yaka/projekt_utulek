    <!-- Detail článku + fotografie-->
    <section class="news">
        <h1>AKTUALITY</h1>
        <div class="article">
            <h2 class="article__title">{{title}}</h2>
            <p class="article__meta"> Publikováno: {{ page.date.toLocaleString('cs-CZ') }}</p>
            <div class="article__content">
                <div class="article__text">
                    <p class="article__perex">{{ perex }}</p>

                    {{ content | safe}}
                    
                <div>
            </div>
        </div>
    </section>

    <section class="article__image">
        <div class="article__image--grid">
            <div class="grid__column">
                <img
                class="article__image"
                src="/images/news/{{ image1 }}"
                alt="{{ alt1 }}"
                />
            </div>

            <div class="grid__column">
                <img
                class="article__image"
                src="/images/news/{{ image2 }}"
                alt="{{ alt2 }}"
                />
            </div>

            <div class="grid__column">
                <img
                class="article__image"
                src="/images/news/{{ image3 }}"
                alt="{{ alt3 }}"
                />
            </div>

            <div class="grid__column">
                <img
                class="article__image"
                src="/images/news/{{ image4 }}"
                alt="{{ alt4 }}"
                />
            </div>
        </div>
    </section>
